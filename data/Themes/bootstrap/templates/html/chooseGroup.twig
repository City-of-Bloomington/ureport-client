{% extends "html/layouts/default.twig" %}

{% block content %}
<section id="chooseGroup">
    <header>
        <div class="alert alert-info">
            <h3 class="alert-heading">Non-Emergency Use Only</h3>
            <p>This system is not for reporting emergencies or imminent safety hazards.</p>
            <p>If this is an emergency, please dial 911.</p>
        </div>
        <div class="alert alert-info">
            <h3 class="alert-heading">Public Record</h3>
            <p>Information you provide through uReport is stored and retained by the City as a public record.</p>
        </div>
    </header>
</section>
<section class="container px-4 text-center">
    <div class="row row-cols-2 gx-5">
    {% for code, group in groups %}
            <a href="{{ uri('home.service', {'group_code':code}) }}" class="col p-3 btn btn-outline-primary">{{ group }}</a>
    {% endfor %}
    </div>
</section>
{% endblock %}