{% extends "html/layouts/default.twig" %}

{% block content %}
<section id="chooseService" class="container w-75 my-3">
    <header class="d-flex flex-wrap align-items-baseline">
        <h2 class="me-auto">{{ group_name }}</h2>
        <nav class="d-flex align-items-baseline" aria-label="Report Steps">
            <span class="me-2">Progress:</span>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="{{ uri('home.index') }}">1</a></li>
                <li class="page-item active"  ><a class="page-link">2</a></li>
                <li class="page-item disabled"><a class="page-link">3</a></li>
                <li class="page-item disabled"><a class="page-link">4</a></li>
            </ul>
        </nav>
    </header>
    <div class="list-group">
    {% for s in services %}
        <a href="{{ uri('home.contact', {'service_code':s.service_code, 'group_code':group_code}) }}"
           class="list-group-item list-group-item-action">
           {{ s.service_name }}
        </a>
    {% endfor %}
    </div>
    <details class="mt-3">
        <summary class="fst-italic text-center mb-2 text-decoration-underline" style="list-style:none;">Can't find what you're looking for?</summary>
        <p class="text-center">You may send an e-mail directly to <a href="mailto:info@bloomington.in.gov">info@bloomington.in.gov</a>, or call the City at <a href="tel:812-349-3400">812.349.3400</a>.</p>
    </details>
</section>

{% endblock %}
