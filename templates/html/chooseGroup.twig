{% extends "html/layouts/default.twig" %}

{% block content %}
<section id="chooseGroup">
    <header>
        <h2>Notice</h2>
        <dl><dt>Non-Emergency Use Only</dt>
            <dd><p>This system is not for reporting emergencies or imminent safety hazards.</p>
                <p>If this is an emergency, please dial 911.</p>
            </dd>

            <dt>Public Record</dt>
            <dd><p>Information you provide through uReport is stored and retained
                   by the City as a public record.
                </p>
            </dd>
        </dl>
    </header>
    <ul>
    {% for code, group in groups %}
        <li><a href="{{ uri('home.service', {'group_code':code}) }}">{{ group }}</a></li>
    {% endfor %}
    </ul>
</section>
{% endblock %}
